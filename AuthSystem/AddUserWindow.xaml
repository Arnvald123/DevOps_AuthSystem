<Window x:Class="AuthSystem.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="➕ Додавання користувача" Height="300" Width="420"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                <TextBlock Text="➕ Додавання нового користувача" FontSize="18" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Ім'я користувача:" FontSize="14" Margin="5"/>
                <TextBox x:Name="UsernameTextBox" Width="260" Height="35" Padding="5"/>

                <CheckBox x:Name="IsAdminCheckBox" Content="Зробити адміністратором" Margin="5"/>

                <Button Content="✅ Додати користувача" Width="260" Height="45" 
                        Background="#4CAF50" Foreground="White" FontWeight="Bold"
                        Click="SaveUser_Click" Margin="15,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
