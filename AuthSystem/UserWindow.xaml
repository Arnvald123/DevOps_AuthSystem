<Window x:Class="AuthSystem.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔑 Користувач: зміна пароля" Height="350" Width="420"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                <TextBlock Text="🔒 Зміна пароля" FontSize="18" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="Старий пароль:" FontSize="14" Margin="5"/>
                <PasswordBox Name="OldPasswordBox" Width="260" Height="35" Padding="5"/>

                <TextBlock Text="Новий пароль:" FontSize="14" Margin="5"/>
                <PasswordBox Name="NewPasswordBox" Width="260" Height="35" Padding="5"/>

                <TextBlock Text="Підтвердіть пароль:" FontSize="14" Margin="5"/>
                <PasswordBox Name="ConfirmPasswordBox" Width="260" Height="35" Padding="5"/>

                <Button Content="✅ Змінити пароль" Width="260" Height="45" 
                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                        Click="ChangePassword_Click" Margin="15,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
