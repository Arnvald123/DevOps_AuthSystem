<Window x:Class="AuthSystem.PasswordSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🔑 Встановлення пароля" Height="300" Width="420"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                <TextBlock Text="🔑 Встановлення пароля" FontSize="18" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Новий пароль:" FontSize="14" Margin="5"/>
                <PasswordBox x:Name="NewPasswordBox" Width="260" Height="35" Padding="5"/>

                <TextBlock Text="Підтвердіть пароль:" FontSize="14" Margin="5"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Width="260" Height="35" Padding="5"/>

                <Button Content="✅ Зберегти" Width="260" Height="45" 
                        Background="#2196F3" Foreground="White" FontWeight="Bold"
                        Click="SavePassword_Click" Margin="15,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
