<Window x:Class="AuthSystem.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ℹ️ Про програму" Height="300" Width="450"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5">

    <Grid>
        <Border BorderBrush="Black" BorderThickness="2" Padding="15" CornerRadius="10">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">

                <TextBlock Text="ℹ️ Про програму" FontSize="18" FontWeight="Bold" 
                           Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="🔹 Автор: Назарій" FontSize="14" Margin="5"/>
                <TextBlock Text="🔹 Завдання: Реалізація системи авторизації" FontSize="14" Margin="5"/>
                <TextBlock Text="🔹 Дата створення: Квітень 2025" FontSize="14" Margin="5"/>

                <Button Content="❌ Закрити" Width="200" Height="40"
                        Background="#FF5252" Foreground="White" FontWeight="Bold"
                        Click="Close_Click" Margin="15,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
